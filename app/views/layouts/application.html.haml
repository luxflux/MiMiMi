!!! 5
%html
  %head
    %title= render_title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "http://piwik.yux.ch/piwik.js"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          = link_to "MiMiMi", root_url, :class => "brand"
          %ul.nav
            %li= link_to t("people.index.page_title"), people_path
    .container
      .content
        .well
          .page-header
            %h1
              = render_title
              %small= tagline
        .well
          .row
            .span16= yield
      %footer
        MiMiMi Project
        :javascript
          try {
            var piwikTracker = Piwik.getTracker("http://piwik.yux.ch/piwik.php", 1);
            piwikTracker.trackPageView();
            piwikTracker.enableLinkTracking();
          } catch( err ) { alert(err); }
        %noscript
          %img{:src => "http://piwik.yux.ch/piwik.php?idsite=1"}
