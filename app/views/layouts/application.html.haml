!!! 5
%html
  %head
    %title= page_title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          = link_to "MiMiMi", root_url, :class => "brand"
    .container
      .content
        .well
          .page-header
            %h1
              = page_title
              %small= t(".tagline")
        .well
          .row
            = yield
      %footer MiMiMi Project
