!!! 5
%html
  %head
    %title= render_title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          = link_to "MiMiMi", root_url, :class => "brand"
          %ul.nav
            = nav_entry t("people.index.page_title"), people_path
    .container
      .content
        .row
          .span-two-thirds
            .well.page_title
              %h1.page-header
                = render_title
                %small= tagline
              - [ :error, :success, :info, :warning ].each do |msg_type|
                - if flash[msg_type]
                  .alert-message{:class => "fade in #{msg_type}", "data-alert" => "alert"}
                    %span= flash[msg_type]
                    %a.close{:href => "#"} X
          .span-one-third
            .well
              .button-actions
                = render "actions"
        .well
          .row
            .span16= yield
      %footer MiMiMi Project
